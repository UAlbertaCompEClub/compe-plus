{
    "name": "compe-plus-api",
    "version": "0.1.0",
    "description": "REST API for CompE+",
    "main": "src/server.ts",
    "private": true,
    "scripts": {
        "prestart": "npm run build",
        "start": "node build/server.js",
        "start:dev": "nodemon --exec 'ts-node' src/server.ts | pino-pretty",
        "build": "npm run clean && tsc",
        "clean": "rm -rf build/",
        "test": "jest",
        "test:watch": "jest --watch",
        "format": "prettier --config ../.prettierrc --ignore-path .prettierignore --write .",
        "lint": "eslint src --ext .js,.ts --max-warnings 0",
        "psql": "PGPASSWORD=postgres psql -h localhost -U postgres -d compe-plus"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.10",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/express-jwt": "^0.0.42",
        "@types/express-pino-logger": "^4.0.2",
        "@types/jest": "^26.0.23",
        "@types/pg": "^8.6.0",
        "@types/pino": "^6.3.8",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "@typescript-eslint/parser": "^4.24.0",
        "eslint": "^7.27.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "pino-pretty": "^5.0.0",
        "prettier": "^2.3.0",
        "ts-jest": "^26.5.6",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-jwt": "^6.0.0",
        "express-jwt-authz": "^2.4.1",
        "express-pino-logger": "^6.0.0",
        "jwks-rsa": "^2.0.3",
        "pg": "^8.6.0",
        "pino": "^6.11.3",
        "zapatos": "^4.0.1"
    }
}
